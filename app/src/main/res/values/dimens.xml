<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="title_backgroung">5dp</dimen>

    <dimen name="call_button_padding_vertical">10dp</dimen>
    <dimen name="call_button_padding_left">25dp</dimen>
    <dimen name="call_button_padding_right">25dp</dimen>


    <integer name="circular_default_sweepAnimationDuration">500</integer>
    <integer name="circular_default_angleAnimationDurationMillis">1200</integer>
    <integer name="circular_default_miniSweepAngle">30</integer>
    <dimen name="circular_default_border_width">4dp</dimen>


    <!-- Default radius for CardView corners. -->
    <dimen name="cardview_default_radius">2dp</dimen>
