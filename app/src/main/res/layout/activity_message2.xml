<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.news.keep.activity.MessageActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_40"
        android:background="#584f60">
        <ImageView
            android:id="@+id/detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_10"
            android:background="@mipmap/abc_ic_ab_back_mtrl_am_alpha"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_100"
            android:gravity="center"
            android:text="@string/item_title"
            android:textColor="@color/wheat"
            android:textSize="@dimen/dimen_20"
        />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_free_line"
        android:layout_weight="1">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/dimen_3"
            android:layout_marginLeft="@dimen/dimen_3"
            android:layout_weight="4"
            android:background="@drawable/backgroung">
            <EditText
                android:id="@+id/detail_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <Button
            android:id="@+id/detail_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_3"
            android:layout_marginLeft="@dimen/dimen_3"
            android:layout_marginRight="@dimen/dimen_3"
            android:layout_weight="1"
            android:background="@drawable/detail_btn"
            android:text="@string/item_btn"
            android:textColor="@color/switch_thumb_normal_material_dark"/>
    </LinearLayout>

</LinearLayout>