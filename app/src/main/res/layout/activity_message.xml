<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.news.keep.activity.MessageActivity">
    <LinearLayout
        android:id="@+id/detail_first_line1"
        android:layout_width="fill_parent"

        android:layout_height="@dimen/dimen_40"
        android:background="#584f60">
        <ImageView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_10"
            android:background="@mipmap/abc_ic_ab_back_mtrl_am_alpha"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_100"
            android:gravity="center"
            android:text="@string/item_title"
            android:textColor="@color/wheat"
            android:textSize="@dimen/dimen_20"
        />
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_weight="1"
        android:scrollbars="none"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_3"
        >
            <!--<com.news.keep.view.RoundImageView-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/detail_useravatar"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:border_color="@color/lavender"
                app:border_width="2dp"
            />
            <TextView
                android:id="@+id/detail_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_toRightOf="@id/detail_useravatar"
                android:text="Eric "
                android:textSize="@dimen/dimen_20"
            />
            <TextView
                android:id="@+id/detail_sendtime"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/detail_sercond_line" android:layout_alignTop="@+id/detail_username"
                android:text="日期"/>
            <TextView

                android:id="@+id/detail_userderction"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_useravatar"
                android:layout_marginTop="@dimen/dimen_10"
                android:minLines="2"
                android:textSize="@dimen/dimen_15"/>
            <ImageView
                android:id="@+id/detail_image"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_below="@id/detail_userderction"
                android:layout_marginTop="@dimen/dimen_10"
            />
            <LinearLayout
                android:id="@+id/detail_sercond_line_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_image"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/lavender"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dimen_10"
                android:orientation="horizontal"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="完成"/>
                <TextView
                    android:id="@+id/detail_txt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="完成"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="第"/>
                <TextView
                    android:id="@+id/detail_txt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="完成"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="次"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_sercond_line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_sercond_line_1"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_5"
                android:layout_marginBottom="@dimen/dimen_10"
                android:orientation="horizontal"
            >
                <ImageView
                    android:id="@+id/detail_icon_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_hot_tag_recommend_praise"
                />
                <ImageView
                    android:id="@+id/detail_icon_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_hot_tag_recommend_reply"
                />
                <ImageView
                    android:id="@+id/detail_icon_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/replyaction"
                />
                <ImageView
                    android:id="@+id/detail_icon_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/replymoremore"
                />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_three_line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_sercond_line"
                android:orientation="horizontal"
            >

                <TextView
                    android:id="@+id/detail_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="330"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_3"
                    android:text="@string/item_likes"
                />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/detail_recy_lin1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:scrollbars="none"/>
                <ImageView
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:background="@mipmap/user_wall_more"
                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_free_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_three_line"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_comments"/>
                <TextView
                    android:id="@+id/detail_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="46"/>

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/detail_recy_lin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_free_line">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_3"
            android:layout_marginLeft="@dimen/dimen_3"
            android:layout_weight="4"
            android:background="@drawable/backgroung">
            <EditText
                android:id="@+id/detail_edtt"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:hint="说点什么吧"
                android:textColorHint="@color/aqua"
            />
        </LinearLayout>
        <Button
            android:id="@+id/detail_main_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_3"
            android:layout_marginLeft="@dimen/dimen_3"
            android:layout_marginRight="@dimen/dimen_3"
            android:layout_weight="1"
            android:background="@drawable/detail_btn"
            android:text="@string/item_btn"
            android:textColor="@color/switch_thumb_normal_material_dark"
        />
    </LinearLayout>

</LinearLayout>
