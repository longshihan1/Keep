<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/include_lin1"
                style="@style/item_display_include"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="w" />

            <TextView
                android:id="@+id/include_lin2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/item_display_include"
                android:layout_weight="1"
                android:text="w" />

            <TextView
                android:id="@+id/include_lin3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/item_display_include"
                android:layout_weight="1"
                android:text="w" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/train_main_view_1_1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/train_main_view_1_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/train_main_view_1_3" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/item_display_add_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_15"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_15"
        android:background="@color/red"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_3"
            android:layout_marginLeft="@dimen/dimen_3"
            android:layout_marginRight="@dimen/dimen_5"
            android:layout_marginTop="@dimen/dimen_3"
            android:background="@mipmap/place_holder_add_image" />

        <TextView
            android:id="@+id/include_jion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dimen_15"
            android:text="@string/item_display_add"
            android:textColor="@color/wheat" />

    </LinearLayout>

</LinearLayout>
