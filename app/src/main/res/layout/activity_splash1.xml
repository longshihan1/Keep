<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash1_reat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/train_splash"
    tools:context="com.news.keep.activity.Splash1Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/user_img_kuang"
            android:src="@mipmap/user_login_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_name"
            android:textColor="@color/turquoise"
            android:textSize="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/splash_title1"
            android:textColor="@color/turquoise"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/splash1_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <com.news.keep.view.RoundImageView
                android:id="@+id/login_img_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:src="@mipmap/ssdk_oks_classic_qq" />

            <com.news.keep.view.RoundImageView
                android:id="@+id/login_img_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ssdk_oks_classic_wechat" />

            <com.news.keep.view.RoundImageView
                android:id="@+id/login_img_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:src="@mipmap/ssdk_oks_classic_sinaweibo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/splash1_register"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/silver"
                android:text="@string/register"
                android:textColor="@color/wheat"
                android:textSize="20dp" />

            <Button
                android:id="@+id/splash1_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/darkmagenta"
                android:text="@string/login"
                android:textColor="@color/wheat"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
