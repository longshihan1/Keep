<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.news.keep.activity.TrainItemDisplay">

    <RelativeLayout
        android:id="@+id/item_display_background"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/black">

        <ImageView
            android:id="@+id/item_display_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10"
            android:background="@mipmap/abc_ic_ab_back_mtrl_am_alpha" />

        <TextView
            android:id="@+id/train_display_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_display_img"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_toEndOf="@+id/item_display_img"
            android:text="@string/main_train_lin_wheat_2"
            android:textColor="@color/ivory"
            android:textSize="@dimen/dimen_20" />


        <TextView
            android:id="@+id/train_display_descrtion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_display_img"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_15"
            android:minLines="@integer/item_text_area"
            android:text="sasassssssssssssssssssssssssssssssssssssssssssssssssssssssss"
            android:textColor="@color/ivory"
            android:textSize="@dimen/dimen_20" />

        <LinearLayout
            android:id="@+id/train_display_linear_four"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/train_display_descrtion"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_display_lin2_1"
                android:textColor="@color/ivory" />

            <TextView
                android:id="@+id/train_display_use_lin2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_train_btn_txt"
                android:textColor="@color/ivory" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10"
                android:text="@string/item_display_lin2_3"
                android:textColor="@color/ivory" />

            <TextView
                android:id="@+id/train_display_use_lin2_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_train_btn_txt"
                android:textColor="@color/ivory" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10"
                android:text="@string/item_display_lin2_5"
                android:textColor="@color/ivory" />

            <TextView
                android:id="@+id/train_display_use_lin2_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_train_btn_txt"
                android:textColor="@color/ivory" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_below="@id/train_display_linear_four"
            android:text="@string/item_people_type"
            android:textColor="@color/ivory" />

    </RelativeLayout>

    <include layout="@layout/item_lin2_join" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:background="@color/lavender" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/train_display_descrtion"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10"
            android:background="@mipmap/icon_info" />

        <TextView
            android:id="@+id/train_display_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="sacscasc"
            android:textSize="@dimen/dimen_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_dddddd"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/snow"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/train_display_peocount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_5"
                android:text="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_5"
                android:text="@string/item_display_peo" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@color/darkblue" />

        <ListView
            android:id="@+id/item_display_lv"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@color/snow"></ListView>
    </LinearLayout>
</LinearLayout>
