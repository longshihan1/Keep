    <FrameLayout
        android:id="@+id/cgt_fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/middle"
        android:background="@color/wheat"></FrameLayout>

    <View
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/cgt_rg_tab"
        android:background="@color/color_dddddd" />

    <RadioGroup
        android:id="@+id/cgt_rg_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/wheat"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/cgt_rb_weixin"
            style="@style/cgt_tabbar"
            android:drawableTop="@drawable/png_train"
            android:text="@string/app_1" />

        <RadioButton
            android:id="@+id/cgt_rb_addressbook"
            style="@style/cgt_tabbar"
            android:drawableTop="@drawable/png_find"
            android:text="@string/app_2" />

        <RadioButton
            android:id="@+id/cgt_rb_find"
            style="@style/cgt_tabbar"
            android:drawableTop="@drawable/png_activity"
            android:text="@string/app_3" />

        <RadioButton
            android:id="@+id/cgt_rb_me"
            style="@style/cgt_tabbar"
            android:drawableTop="@drawable/png_me"
            android:text="@string/app_4" />
    </RadioGroup>
</RelativeLayout>
